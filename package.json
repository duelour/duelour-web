{
  "name": "duelour-web",
  "version": "0.1.0",
  "repository": "https://github.com/duelour/duelour-web",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "precommit": "lint-staged",
    "lint": "xo",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./lib/data/__mocks__/local-storage.mock.js"
  },
  "xo": {
    "extends": ["xo-react", "prettier", "prettier/react"],
    "space": true,
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "react/react-in-jsx-scope": 0,
      "react/no-danger": 0,
      "react/forbid-component-props": 0,
      "react/jsx-indent": 0,
      "react/no-unescaped-entities": 0
    },
    "globals": [
      "window",
      "React",
      "jest",
      "describe",
      "it",
      "expect",
      "jasmine"
    ]
  },
  "dependencies": {
    "bootflat": "^2.0.4",
    "bootstrap": "^3.3.7",
    "classnames": "^2.2.5",
    "firebase": "^3.7.4",
    "flat-ui": "^2.1.1",
    "lodash": "^4.17.4",
    "next": "*",
    "next-style-loader": "^0.3.1",
    "now": "^4.10.3",
    "prettier": "^1.1.0",
    "q": "^1.5.0",
    "react": "^15.4.2",
    "react-bootstrap": "^0.30.8",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "autoprefixer": "6.7.6",
    "babel-jest": "^19.0.0",
    "babel-plugin-module-resolver": "2.5.0",
    "babel-plugin-wrap-in-js": "^1.1.0",
    "babel-preset-es2015": "^6.24.1",
    "enzyme": "^2.8.0",
    "eslint-config-prettier": "^1.6.0",
    "eslint-config-xo-react": "^0.11.1",
    "eslint-plugin-react": "^6.10.3",
    "glob": "7.1.1",
    "husky": "^0.13.3",
    "jest-cli": "^19.0.2",
    "lint-staged": "^3.4.0",
    "node-sass": "^4.4.0",
    "postcss-easy-import": "2.0.0",
    "postcss-loader": "1.3.3",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "sass-loader": "^4.1.1",
    "webpack": "^2.3.3",
    "xo": "^0.18.1"
  }
}
